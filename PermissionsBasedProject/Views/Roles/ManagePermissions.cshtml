@model CheckBoxGroupViewModel
@{
    ViewData["Title"] = "Manage Permissions";
}
<form asp-action="UpdatePermissions" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.GroupName</h2>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="GroupId" />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Module</th>
                        <th>Permission</th>
                    </tr>
                </thead>
                <tbody>
                        @for (var i = 0; i < Model.CheckboxList.Count; i++)
            {
                <tr>
                    <td>
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.CheckboxList[i].CheckBoxValue" />
                            <input asp-for="@Model.CheckboxList[i].IsSelected" class="form-check-input"/>
                        </div>
                    </td>
                    <td>@Model.CheckboxList[i].CheckBoxValue.Split('.')[1]</td>
                    <td>@Model.CheckboxList[i].CheckBoxValue.Split('.')[2]</td>
                </tr>
                                
            }
                </tbody>
            </table>




            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
