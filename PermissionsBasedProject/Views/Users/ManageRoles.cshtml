@model CheckBoxGroupViewModel
@{
    ViewData["Title"] = "Manage CheckboxList";
}
<form asp-action="UpdateRoles" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.GroupName</h2>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="GroupId" />
            @for (var i = 0; i < Model.CheckboxList.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.CheckboxList[i].CheckBoxValue" />
                    <input asp-for="@Model.CheckboxList[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.CheckboxList[i].IsSelected">
                            @Model.CheckboxList[i].CheckBoxValue
                    </label>
                </div>                
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
